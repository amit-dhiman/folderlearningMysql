<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Students list</title>
  </head>
  <body>
    <h1>Students search</h1>

    <form action="/search">
      <input type="search" name="name" placeholder="Search Name">
      <input type="search" name="email" placeholder="Search email">
      <input type="search" name="mno" placeholder="Search Mobile No.">
      <input type="submit" value="Search">
    </form>
    
    <h1>Students list</h1>
    <table border="1" width="100%">
      <tr>
        <th>S No.</th>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile No.</th>
      </tr>

      <% if(students.length){ %> 

        <% for(let i=0; i< students.length;i++){ %>
          <tr>
            <td><%- students[i].id %></td>
            <td><%- students[i].name %></td>
            <td><%- students[i].email %></td>
            <td><%- students[i].mno %></td>
          </tr>
        <% }%>

      <% }else{ %>

       <tr>
        <td>Data Not Found</td>
       </tr>
       
      <% } %>
    </table>
  </body>
</html>

